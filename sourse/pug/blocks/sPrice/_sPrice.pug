mixin sPrice()
	// start sPrice
	+b.SECTION.sPrice.section#sPrice&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Стоимость
			+e.table
				mixin item(l,t,p,t1, t2, t3,t4,t5, st, btn, cl, a, tarif)
					+e.item
						+e.td
							if l
								+e.label(class=`bg-${cl}`)= l
								+e.title!= t
								if st
									.strong!= st
								if p
									+e.text.text-secondary!= p
						if t1
							+e.td!= t1
						else
							+e.td.d-none.d-lg-block
						+e.td!= t2
						+e.td!= t3
						+e.td!= t4
						if t5
							+e.td
								if t5
									.strong!= t5
								block
						else
							+e.td.d-none.d-lg-block
						+e.td
							if btn
								+e.A.btn.link-modal(href= a class=`btn-${cl}` data-tarif= tarif)= btn
				+item(``, ``, `` , `GPS-мониторинг парка* (дополнительно по желанию)` , `Кол-во автомобилей` , `Кол-во пользователей` , `Доп. программирование` , `Цена в месяц`, ``, ``, '','')

